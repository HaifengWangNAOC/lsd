#!/usr/bin/env python
#
# Example: lsd-xmatch ps1_obj sdss
#

import sys
import getopt
import lsd
from   lsd.utils import *
from   lsd.tui   import *

def usage():
	print "Usage: %s --db=dbdir --radius=[1arcsec] <from_table> <to_table>" % sys.argv[0]

optlist, (dbdir,), (from_tabname, to_tabname) = tui_getopt('hr:', ['help', 'radius='], 2, usage)

radius = 1.
for (o, a) in optlist:
	if o == '-h' or o == '--help':
		usage()
		exit()
	if o == '-r' or o == '--radius':
		radius = float(a)

#
# Actual work
#

db = lsd.DB(dbdir)
lsd.xmatch(db, from_tabname, to_tabname, radius/3600.)
